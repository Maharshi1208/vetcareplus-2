# --- Postgres ---
POSTGRES_DB=vetcare_db
POSTGRES_USER=vc_user
POSTGRES_PASSWORD=vc_pass_123

# Exposed host ports (change if busy)
PG_PORT=5432
PGADMIN_PORT=5050
MAILHOG_SMTP_PORT=1025
