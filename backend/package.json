{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "dotenv -e ../.env -- tsx watch src/server.ts",
    "build": "tsc",
    "start": "dotenv -e ../.env -- node dist/server.js",
    "test": "npm run test:unit && npm run test:int",
    "test:unit": "jest --config ./jest.config.ts --passWithNoTests --ci --reporters=default --testPathPattern=\".*\\\\.unit\\\\.test\\\\.ts$\"",
    "test:int": "jest --config ./jest.config.ts --runInBand --detectOpenHandles --ci --reporters=default --testPathPattern=\".*\\\\.int\\\\.test\\\\.ts$\"",
    "coverage": "npm run test:int -- --coverage",
    "db:test:reset": "prisma migrate reset --force && prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:reset": "prisma migrate reset --force",
    "prisma:studio": "prisma studio",
    "prisma:seed": "prisma db seed",
    "test:ci": "jest --config ./jest.config.ts --runInBand --detectOpenHandles --ci --coverage --reporters=default",
    "coverage:html": "jest --config ./jest.config.ts --coverage --coverageReporters=html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.0",
    "@types/nodemailer": "^7.0.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "dotenv-cli": "^10.0.0",
    "jest": "^29.7.0",
    "openapi-types": "^12.1.3",
    "prisma": "^6.16.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
